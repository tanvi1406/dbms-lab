QUERY1:
SELECT M.MOV_TITLE
FROM DIRECTOR D,MOVIES M
WHERE D.DIR_ID = M.DIR_ID AND D.DIR_NAME='HITCHCOCK';

RESULTS:
MOV_TITLE
XYZ
PQR
RST
 
QUERY2:
SELECT M.MOV_TITLE
FROM MOVIES M,MOVIE_CAST MC
WHERE M.MOV_ID=MC.MOV_ID AND MC.ACT_ID IN 
       (SELECT MC.ACT_ID
        FROM MOVIE_CAST
        GROUP BY MC.ACT_ID
        HAVING COUNT(*)>1 )
GROUP BY M.MOV_ID
HAVING COUNT(*)>1 ;

RESULTS:
MOV_TITLE
ABC
RST

QUERY3:
((SELECT ATC_ID 
 FROM MOVIES M JOIN MOVIE_CAST MC ON M.MOV_ID=MC.MOV_ID
 WHERE MOV_YEAR<2000)
 INTERSECTS
  (SELECT ATC_ID 
 FROM MOVIES M JOIN MOVIE_CAST MC ON M.MOV_ID=MC.MOV_ID
 WHERE MOV_YEAR>2015));

QUERY4:
SELECT MOV_TITLE,REV_STARS
FROM MOVIES M,RATING R
WHERE M.MOV_ID=R.MOV_ID AND REV_STARS>1
ORDER BY MOV_TITLE;

QUERY5:
UPDATE RATING R,MOVIES M,DIRECTOR D
SET REV_STARS=5
WHERE DIR_NAME='STEVEN SPIELBERG' AND D.DIR_ID=M.DIR_ID AND M.MOV_ID=R.MOV_ID; 
SELECT * FROM RATING;
